<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Historial de Transacciones</div>
  <!-- Table -->
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>Fecha</th>
      <th># Tarjeta</th>
      <th>Usuario</th>
      <th>Puntos</th>
      <th>Acci√≥n</th>
    </tr>
    </thead>
    <tbody>
        <% @transactions.each do |t| %>
            <tr>
              <td><%= t.id %></td>
              <td><%= t.created_at.strftime("%d/%m/%Y") %></td>
              <td><%= t.card.code %></td>
              <td><%= t.user.try(:name) %></td>
              <td><%= points_added(t) %></td>
              <td><%= points_action(t) %></td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>