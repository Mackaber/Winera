<br>
<div style="text-align: center" class="col-md-12">
  <% @eras.each do |e| %>
    <div class="well row">
        <div class="col-md-3">
            <%= image_tag e.business.image, :style => "width:150px" %>
        </div>
        <div style="margin-top: 4%;">
            <div class="col-md-2">
                <h4><%= e.business.name %></h4>
            </div>
            <div class="col-md-2">
                $ <%= e.era_points.round(2) %>
            </div>
            <div class="col-md-5">
              <div class="progress">
                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                  <span class="sr-only">20% Complete</span>
                </div>
              </div>
            </div>
        </div>
    </div>
  <% end %>
</div>