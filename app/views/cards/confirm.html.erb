<div class="well well-lg">
  <div style="text-align: center;">
    <h2>Confirmación</h2>
    <h4><%= @user.name %></h4>
  </div>
  <div class="row">
    <div style="text-align: center;" class="col-md-6">
        <h5>Nível: 1 = 10% </h5>
        <h5>Número de Visitas:  <%= @visitas %></h5>
        <h5>Número de Visitas este mes:  <%= @visitas_mes %></h5>
    </div>
    <div class="col-md-6">
        <table class="table">
          <tr>
            <td>Total Consumido:</td><td><%= @total %></td>
          </tr>
          <tr>
            <td>Dinero Electrónico al inicio:</td><td><%= @d_inicio %></td>
          </tr>
          <tr>
            <td>Dinero Electrónico usado:</td><td><%= @d_usado %></td>
          </tr>
          <tr>
            <td>Restante por pagar:</td><td><%= @restante %></td>
          </tr>
          <tr>
            <td>Dinero Electrónico generado:</td><td><%= @generado %></td>
          </tr>
          <tr>
            <td>Dinero electrónico al final:</td><td><%= @final %></td>
          </tr>
        </table>
    </div>
  </div>
  <div class="row">
      <div class="col-md-6">
        <div class="form-group">
            <a href="/card"><button class="col-xs-12 btn btn-danger btn-lg">Cancelar</button></a>
        </div>
      </div>
      <div class="col-md-6">
          <%= form_tag("/transaction/use_era_points", method: "post") do %>
              <div class="form-group" >
                <%= submit_tag("Confirmar", :class => "col-xs-12 btn btn-primary btn-lg") %>
              </div>
          <% end %>
      </div>
  </div>
</div>