<div class="container">
 <%= render "layouts/flasher" %>
    <div class="row" >
        <%= form_tag("/card/confirm", method: "post", :class => "form-horizontal", :role => "form") do %>
        <div class="col-md-4 well well-sm">
          <div class="form-group">
            <%= label_tag(:total, "Código", :for => "card_code", :class => "col-md-4 control-label") %>
            <div class="col-md-8">
                <%= text_field_tag(:card_code, @card_code, :class => "form-control", :placeholder => "0000-0000-0000-0000") %>
            </div>
          </div>
          <div class="form-group">
            <%= label_tag(:total, "$ Total", :for => "total", :class => "col-md-4 control-label") %>
            <div class="col-md-8">
                <%= text_field_tag(:total, "",:class => "form-control", :placeholder => "0.00") %>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <div class="col-xs-12">
                <%= submit_tag("Abonar Puntos", :class => "col-md-12 col-xs-12 btn btn-primary btn-lg") %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <%= submit_tag("Usar Puntos", :class => "col-md-12 col-xs-12 btn btn-warning btn-lg") %>
            </div>
          </div>
        </div>
        <% end %>

        <div class="col-md-4">
          <div style="text-align: center;" class="col-xs-7 col-md-7">
            <h4>Empresa</h4>
            <small>San Luis Potosí</small><br><br>
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                Cambiar empresa <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li><a href="#">Separated link</a></li>
              </ul>
            </div>

          </div>
          <div class="col-xs-5 col-md-5">
            <%= image_tag "http://placehold.it/110x110" %>
          </div>
        </div>
    </div>
</div>